{
  "$schema": "../gen/schemas/desktop-capability.json",
  "identifier": "default",
  "description": "Default permissions for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "shell:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "args": true,
          "sidecar": "bin/scanner"
        }
      ]
    }
  ]
}