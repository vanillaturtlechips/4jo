{
  "$schema": "../gen/schemas/desktop-capability.json",
  "identifier": "default",
  "description": "Silver Guardian 실행을 위한 Tauri v2 규격 권한 설정",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:event:allow-listen",
    "core:event:allow-emit",
    "shell:default",
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "bin/scanner",
          "sidecar": true,
          "args": true
        }
      ]
    }
  ]
}